<!DOCTYPE html>
<html>
  <head>
    <title>Rails MiniStarter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <header>
      <div class="flex p-4 bg-slate-50">
        <div class="flex-1">
          <a class="btn btn-ghost normal-case text-xl font-semibold text-slate-800 select-none">Rails MiniStarter</a>
        </div>
        <div class="flex-none">
          <ul class="menu menu-horizontal px-5">
            <% if user_signed_in? %>
              <li>
                <details>
                  <summary>
                    <%= current_user.email %>
                  </summary>
                  <ul class="bg-base-100">
                    <li>
                      <%= button_to t('devise.sessions.sign_out'), destroy_user_session_path, method: :delete  %>
                    </li>
                  </ul>
                </details>
              </li>
            <% else %>
              <li>
                <%= link_to t('devise.sessions.sign_in'), new_user_session_path %>
              </li>
              <li>
                <%= link_to t('devise.registrations.new'), new_user_registration_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <% if notice %>
        <div class="px-10">
          <div class="alert alert-info">
            <span><%= notice %></span>
          </div>
        </div>
      <% end %>
      <% if alert %>
        <div class="px-10">
          <div class="alert alert-warning">
            <span><%= alert %></span>
          </div>
        </div>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
